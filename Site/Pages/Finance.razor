@page "/Finances"
@using Dto

<PageTitle>Finance</PageTitle>

<h1>Hello, world!</h1>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#financeModal">
    Add New
</button>


<!-- Modal -->
<div class="modal fade" id="financeModal" tabindex="-1" aria-labelledby="financeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="financeModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@FinanceInput" OnValidSubmit="@HandleValidSubmit">
                    <div class="row">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="from-group">
                                <input type="text" @bind-value="FinanceInput.Amount" class="form-control"
                                    placeholder="amount">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="from-group">
                                <input type="datetime" @bind-value="FinanceInput.PayDate" class="form-control"
                                    placeholder="PayDate">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="from-group">
                                <input type="text" @bind-value="FinanceInput.Type" class="form-control"
                                    placeholder="Type">
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-primary" value="Save changes" />
            </div>
        </div>
    </div>
</div>